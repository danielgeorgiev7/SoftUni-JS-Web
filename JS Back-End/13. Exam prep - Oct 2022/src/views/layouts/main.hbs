<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/styles.css" />
    <title>Home Page</title>
  </head>

  <body>

    <div>
      <div class="errorContainer">
        <p>Error</p>
      </div>
    </div>

    <div id="wrapper">
      <header>
        <!-- Navigation -->
        <nav>
          <div>
            <a href="/">Home</a>
            <a href="/animals/dashboard">Dashboard</a>
            <a href="/animals/search">Search</a>
          </div>

          {{#if isAuthenticated}}
            <div class="user">
              <a href="/animals/create">Add Animal</a>
              <a href="/auth/logout">Logout</a>
            </div>
          {{else}}
            <div class="guest">
              <a href="/auth/login">Login</a>
              <a href="/auth/register">Register</a>
            </div>
          {{/if}}
        </nav>
      </header>

      <main class="home">
        {{{body}}}
      </main>

      <footer>
        <p>@Friendly World</p>
      </footer>
    </div>
  </body>

</html>