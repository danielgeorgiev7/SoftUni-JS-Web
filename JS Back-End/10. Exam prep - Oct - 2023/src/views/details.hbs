<section id="detailsPage">
  <div id="detailsInfo">
    <h1>Name: {{name}}</h1>
    <div class="info"><img src="{{image}}" /></div>

    <div class="info">
      <h3>Type: {{type}}</h3>
      <h3>Year of Production: {{year}}</h3>
      <h3>Years of Exploitation: {{exploitation}}</h3>
      <h3>Damages: {{damages}}</h3>
      <h3>Description: {{description}}</h3>
      <h2>Price: ${{price}}</h2>
    </div>

    {{#if isAuthenticated}}
    <div class="buttons">

      {{#if isOwner}}
        <a href="/catalog/details/{{_id}}/edit" class="edit-btn">Edit</a>
        <a href="/catalog/details/{{_id}}/delete" class="delete-btn">Delete</a>
      {{else}}
        {{#if hasBought}}
          <p><span class="buy">Thank You For Your Purchase</span></p>
        {{else}}
          <a href="/catalog/details/{{_id}}/buy" class="buy-btn">Buy</a>
        {{/if}}
      {{/if}}
    {{/if}}

    </div>
  </div>
</section>