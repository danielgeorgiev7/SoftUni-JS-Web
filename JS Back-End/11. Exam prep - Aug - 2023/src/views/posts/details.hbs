<section id="details-page">
  <div class="main_card">
    <div class="card_left">
      <div class="card_datails">
        <h1>Name: {{name}}</h1>
        <h3>Created by an author: {{ownerFullname}}</h3>
        <div class="card_character">
          <p class="card-species">Species: {{species}}</p>
          <p class="card-skin">Skin colour: {{skinColor}}</p>
          <p class="card-eye">Eye Colour: {{eyeColor}}</p>
        </div>

        <p class="disc">{{description}}</p>

        {{#if isAuthenticated}}
        <div class="social-btn">
          {{#if isOwner}}
          <a href="/posts/edit/{{_id}}" class="edit-btn">Edit</a>
          <a href="/posts/delete/{{_id}}" class="del-btn">Delete</a>
          {{else}}
            {{#if hasVoted}}
            <p class="thanks-for-vote">Thanks For Voting</p>
            {{else}}
          <a href="/posts/vote/{{_id}}" class="vote-up">Vote</a>
            {{/if}}
          {{/if}}
          {{/if}}
        </div>
      </div>
    </div>
    <div class="card_right">
      <img src="{{image}}" alt="image" />
    </div>
  </div>
</section>

<section id="votes">
  <div class="vote-info">
    <div class="card_left">
      <div class="card_datails">
        <h1>Votes</h1>
        <div class="card_vote">
          <p class="PV">Total rating of votes: {{votesCount}}</p>
        </div>
        {{#if votersEmails}}
         <p class="disc">People who voted for the post - {{votersEmails}}</p>
         {{else}}
        <p class="disc">
          People who voted for the post - No one has voted yet.
        </p>
        {{/if}}
      </div>
    </div>
  </div>
</section>