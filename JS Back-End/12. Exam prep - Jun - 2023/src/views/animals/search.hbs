<!-- Search Page (Only for logged-in users) -->
<section id="search">
  <h2>Search by Location</h2>

  <form class="search-wrapper cf" method="GET">
    <input
      id="#search-input"
      type="text"
      name="location"
      placeholder="Search here..."
      required
    />
    <button type="submit">Search</button>
  </form>

  {{#if items}}
  <div id="search-container">
      <ul class="card-wrapper">
    {{#each items}}
        <li class="card">
          <img src="{{image}}" />
          <p>
            <strong>Name: </strong><span class="name">{{name}}</span>
          </p>
          <p>
            <strong>Location: </strong><span
              class="location"
            >{{location}}</span>
          </p>
          <p><strong>Need of:</strong><span class="need-of">{{need}}</span></p>
          <a class="details-btn" href="/animals/details/{{_id}}">Details</a>
        </li>
    {{/each}}
      </ul>
      {{/if}}

    {{#unless items}}
      <div id="no-post">
        <h2>There are no results found.</h2>
      </div>
      {{/unless}}
  </div>
</section>