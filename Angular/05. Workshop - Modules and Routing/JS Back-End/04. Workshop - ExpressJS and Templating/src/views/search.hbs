<section id="search">
  <h1>Search</h1>
  <form action="/search" method="GET" class="form">
    <input type="text" class="search" name="title"  placeholder="Title..." value="{{title}}"/>
    <input type="text" name="" class="genre"  placeholder="Genre..." value="{{genre}}"/>
    <input type="number" name="" class="year" placeholder="Year..." value="{{date}}"/>
    <input type="submit" value="search" />
  </form>
</section>

<section id="catalog">
  <div class="band">
    {{> catalog}}
  </div>
</section>